<div class="container mt-5" style="max-width: 500px;">
  <h1 class="mb-4 text-center">ログイン</h1>

  <%= form_with url: login_path, method: :post, local: true do %>
    <div class="mb-3">
      <%= label_tag :email, 'メールアドレス', class: "form-label" %>
      <%= email_field_tag :email, 'a@example.com', class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag :password, 'パスワード', class: "form-label" %>
      <%= password_field_tag :password, 'password', class: "form-control" %>
    </div>

    <%= submit_tag 'ログイン', class: "btn btn-primary w-100" %>
  <% end %>
</div>
