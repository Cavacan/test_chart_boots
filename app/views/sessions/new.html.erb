<!-- app/views/sessions/new.html.erb -->
<h1>ログイン</h1>

<%= form_with url: login_path, method: :post, local: true do %>
  <div class="mb-3">
    <%= label_tag :email, 'メールアドレス' %>
    <%= email_field_tag :email, 'a@example.com', class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password, 'password', class: "form-control" %>
  </div>

  <%= submit_tag 'ログイン', class: "btn btn-primary" %>
<% end %>